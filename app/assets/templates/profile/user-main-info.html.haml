.sidebar-header(data-div="page-title")
  .flex-wrap.flex-grow
    %h2.sb-text.sb-h1-text Edit main info
    %p.sb-p-text.gr Use this window to edit your main info.


%div(ng-if="!loaded")
  .flex-center.padd_top_md
    %material-spinner.fade-element-in

.app_wrap.border.marg_bott_md(ng-if="loaded")
  .row
    .padd_md
      .col-md-8.no_padd
        %h5.no_marg_top
          First name
        %input.new-input{"ng-model"=> "user.firstName", :style => "width: 100%", :type => "text"}
        %h5
          Last name
        %input.new-input{"ng-model"=> "user.lastName", :style => "width: 100%", :type => "text"}
        %h5
          About
        %textarea.new-textarea{"ng-model"=> "user.about", :style => "width: 100%;height: 64px;"}

        .col-md-12.inl.marg_top_md.no_padd.padd_bott_md
          %button.mdl-button.mdl-js-button.mdl-js-ripple-effect.gex-btn-new(ng-click="updateUser()" ng-disabled="disableSubmitBtn" style="min-width:185px;") {{submitBtnText}}
          {{messageText}}
