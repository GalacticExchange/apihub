.sidebar-header(data-div="page-title")
  .flex-wrap.flex-grow
    %h2.sb-text.sb-h1-text Edit password
    %p.sb-p-text.gr Use this window to change your password.
.app_wrap.border.marg_bott_md
  .row
    .padd_md
      .row
        .col-md-8.no_padd
          %h5.no_marg_top
            Current password
          %input.new-input{"ng-model"=> "password.current", :style => "width: 100%", :type => "password"}
          %h5
            New password
          %input.new-input{"ng-model"=> "password.new", :style => "width: 100%", :type => "password"}
          %h5
            Confirm new password
          %input.new-input{"ng-model"=> "password.newConfirm", :style => "width: 100%", :type => "password"}

          .padd_top_md
            %button.mdl-button.mdl-js-button.mdl-js-ripple-effect.gex-btn-new(ng-click="updatePassword()" ng-disabled="disableSubmitBtn" style="min-width:185px;") {{submitBtnText}}
            {{messageText}}
