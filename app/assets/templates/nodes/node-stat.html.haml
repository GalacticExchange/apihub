%div.gx-page(ng-if="loaded")
  .sidebar-header(data-div="page-title")
    .flex-wrap.flex-grow
      %h2.sb-text.sb-h1-text.gr.inl  Node
      %h2.sb-text.sb-h1-text.inl {{node.name}}
      %h2.sb-text.sb-h1-text.inl(ng-if="node.local") (it's your local node)
      %p.sb-p-text.gr  CPU and memory usage charts.
    .flex-wrap
      .flex-container-all
        .flex-wrap
          %a(ng-href="{{ROUTES.getAddr('NODES_INFO', utils.currentCluster.id, node.id)}}" class="undec inl")
            %button.mdl-button.mdl-js-button.mdl-js-ripple-effect.gx-btn.lite-blue.undec(data-btn="create-cluster")
              .fl-cont
                .fl-wrap.marg_ri_10{style:'margin-top: -1px;'}
                  =inline_svg 'new/icons/nodes_.svg', class: 'sm-icon gex-svg'
                .fl-wrap
                  Manage node

            -#%button.mdl-button.mdl-js-button.mdl-js-ripple-effect.gex_mdl_btn_transp_md.inl
              Node control
        -#.flex-wrap.marg_left_sm
          %div(ng-if="utils.permissions.cluster_manage")
            %a(ng-href="{{ROUTES.getAddr('NODES_SETTINGS', utils.currentCluster.id, node.id)}}")
              %button.mdl-button.mdl-js-button.mdl-js-ripple-effect.gex_mdl_btn_transp_md.inl{style:"padding: 0px !important", id:"{{node.id}}"}
                =image_tag "new/icons/settings.svg", :style=>"opacity: 0.6; margin-top: -2px; width: 17pt", :class=>"inl"
            .mdl-tooltip.mdl-tooltip--large{:for => "{{node.id}}"}
              Node settings


  .app_wrap.border.marg_bott_md.invitations_list.padd_30.no_padd_ri
    %node-cpu-chart(data-node-id="{{node.id}}")


    .div{style:'padding: 40px 0 30px 0;'}
      .bord_bott

    %node-ram-chart(data-node-id="{{node.id}}")

