-#.bord_bott.lite_bg
  .row
    .col-lg-9.col-md-12.col-xs-12.no_padd.padd_md
      %h4.no_marg.inl Memory Usage
      %h6.no_marg.inl.gr.marg_left_sm  (in GB)
    .col-lg-3.hidden-xs.hidden-sm.hidden-md{:height => "100%", style:"padding-top: 13px"}
      .pull-right
        .dropdown_fx_15
          %button.mdl-button.mdl-js-button#demo-menu-lower-right{ :style=>"border-radius: 4px; border: 0px solid rgba(212, 212, 212, 0.6); background-color: white;"}
            %h5.no_marg.inl 2 Hours
            =image_tag "new/down.png", :class=>"nodes_more_picq inl no_marg", :width => 20, :style=>"opacity: 0.7"
          %ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect(ng-mdl-select){:for => "demo-menu-lower-right"}
            %li.mdl-menu__item More options will be available soon


.div.marg_bott_md
  .fl-cont.gx-fl-center.padd_bott_md
    .fl-wrap.padd_ri_10
      .card-h-icon
        .svg-wrap
          =inline_svg "new/icons/chart.svg", class: "sm-icon white-svg fx-sm-icon"
    .fl-wrap.fl-grow
      %p.card-h.bold.inl Memory Usage
      %h6.no_marg.inl.gr.marg_left_sm  (in GB)
    .fl-wrap
      .gx-bage.gx-bage-lg{class:'trace-bage' , style:'padding: 12px 18px;border-radius: 6px; background-color: #efefef;', id: "{{dep}}_tooltip"}
        .fl-cont.fl-center
          .fl-wrap
            .div(style='height: 14px; margin-top: -8px;')
              =inline_svg "new/icons/time.svg", class: 'apphub-help-icon lite-gr-svg', width: 14, height: 14
          .fl-wrap.marg_left_10
            %h6.no_marg.gr.bold
              2 hours







  .padd_top_md{style:"display: flex; align-items: center; justify-content: center;"}
    .col-lg-9.col-md-12.col-xs-12.no_padd
      .text-center.padd_md(ng-if="loaded && loadedFails")
        %h5.gr Can't load memory chart for some reason.
      .memory_loader.text-center.padd_md(ng-if="!loaded")
        %material-spinner.marg_md(data-spinner-radius="30")
      %canvas(ng-show="loaded && !loadedFails" height="15%" width="80%" id="ram_line_chart")

    .col-lg-3.hidden-xs.hidden-sm.hidden-md{:height => "100%", :style=>"border-jleft: solid 1px rgba(212, 212, 212, 0.6)"}
      .text-center.padd_bott_md(ng-show="loaded && !loadedFails"){:height => "100%"}
        %h1.gr(ng-class="{bold : !isNil(usedRamNow)}" style="font-size: 4vw;") {{!isNil(usedRamNow) ? usedRamNow + ' GB' : 'N/A'}}
        %div(ng-if="!isNil(usedRamNow)")
          %h4.gr.inl.bold out of {{totalRamNow}} GB
          %h4.gr.inl.bold ({{usedRadPercNow}}%)

