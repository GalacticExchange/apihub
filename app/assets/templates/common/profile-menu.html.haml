.row{:style=>"width: 100%; overflow-x: hidden;"}
  .col-md-12.no_padd{:style=>"widht: 100%"}
    .navbar-header
      .row.bord_bott
        .navbar-toggle{ :style=>"float: left; padding: 0px; margin: 0px; width: 100%;"}
          .row
            .col-xs-1.no_padd{:style=>"cursor: pointer"}
              .padd_left_md
                .close-icon{:style=>"padding-top: 14pt; display: none; margin-left: -2px", "ng-click"=> "hideXsMenu()"}
                  =image_tag "new/icons/close.svg", :width=>"25pt", :style=>"opacity: 0.7"
                .menu-icon{:style=>"padding-top: 18pt", "data-target" => "#myNavbar", "data-toggle" => "collapse", :type => "button", "ng-click"=> "showXsMenu()"}
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar
            .col-xs-10.no_padd{:style=>"text-align: left;"}
              %h3.step_text.side_menu_h{:style=>"color: #434343"}
                Profile


    #target.container-fluid.no_padd.no_marg
      #myNavbar.collapse.navbar-collapse.no_padd.no_marg
        %ul.nav.navbar-nav.no_padd.no_marg{:style=>"float: none; width: 100%"}
          %ul.nav.navbar-nav.no_padd.no_marg{:style=>"float: none; width: 100%"}
            .padd_bott_mdz.install_step
              .flex-container-all
                .flex-wrap
                  %h3.left-menu-h Profile settings


          %a(ng-href="{{ROUTES.getAddr('USER_MAIN_INFO', currentUser.username)}}" class="left-menu-el" ng-class="pageSelected == 'userMainInfo' ? 'left-menu-current' : ''")
            .fl-cont.gx-fl-center
              .fl-wrap.padd_ri_sm
                = inline_svg "new/icons/admin_black.svg"
              .fl-wrap
                %h3 Main info

          %a(ng-href="{{ROUTES.getAddr('USER_AVATAR', currentUser.username)}}" class="left-menu-el" ng-class="pageSelected == 'userAvatar' ? 'left-menu-current' : ''")
            .fl-cont.gx-fl-center
              .fl-wrap.padd_ri_sm
                = inline_svg "new/icons/camera.svg"
              .fl-wrap
                %h3 Avatar

          %a(ng-href="{{ROUTES.getAddr('USER_PASSWORD', currentUser.username)}}" class="left-menu-el" ng-class="pageSelected == 'userPassword' ? 'left-menu-current' : ''")
            .fl-cont.gx-fl-center
              .fl-wrap.padd_ri_sm
                = inline_svg "new/icons/key.svg"
              .fl-wrap
                %h3 Password


          -#.old
            %a(ng-href="{{ROUTES.getAddr('USER_MAIN_INFO', currentUser.username)}}" class="undec")
              .install_step.side_menu_element(ng-class="pageSelected == 'userMainInfo' ? 'current_step' : ''")
                %h3.step_text.side_menu_text.no_marg_top(ng-class="pageSelected == 'userMainInfo' ? 'current_step_text' : ''") Main info
            %a(ng-href="{{ROUTES.getAddr('USER_AVATAR', currentUser.username)}}" class="undec")
              .install_step.side_menu_element(ng-class="pageSelected == 'userAvatar' ? 'current_step' : ''")
                %h3.step_text.side_menu_text(ng-class="pageSelected == 'userAvatar' ? 'current_step_text' : ''") Avatar
            %a(ng-href="{{ROUTES.getAddr('USER_PASSWORD', currentUser.username)}}" class="undec")
              .install_step.side_menu_element(ng-class="pageSelected == 'userPassword' ? 'current_step' : ''")
                %h3.step_text.side_menu_text(ng-class="pageSelected == 'userPassword' ? 'current_step_text' : ''") Password

