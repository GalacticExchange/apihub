%h1 Library application "#{@item.name}"
.row
  .col-md-9
    %b Name:
    = @item.name
    -#=link_to "edit", edit_admin_library_application_path(@item)

  .col-md-3
    = image_tag picture_url_library_application(@item, :medium)
    = image_tag icon_url_library_application(@item, :medium)
%br
%b Title:
= @item.title
%br
%b Position:
= @item.pos
%br
%b Enabled:
= @item.enabled
%br
%b Git Repo:
= @item.git_repo
%br
%b Description:
%br
%textarea{:style => "width: 80%;"}
  = @item.description

%br
-@item.images.each do |t|
  = image_tag picture_url_library_application_image(t, :thumb)
%br
=link_to edit_admin_library_application_path do
  %btn.btn.btn-primary Edit


= link_to admin_library_application_path(@item.id), method: :delete, data: { confirm: 'Delete this app?' } do
  %btn.btn.btn-danger Delete

